.container {
  display: flex;
  width: fit-content;
  gap: 30px;
  margin: 20vh auto 5vh auto;
  background-color: var(--couleur-vert);
  padding: 30px 40px;
  border-radius: 10px;
  border: solid 1px #a4ffbe;
  align-items: center;
}
.block-text {
  display: flex;
  gap: 6px;
}
.alert {
  font-size: 20px;
  font-weight: 700;
}
.confirmation-box {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.confirmation-actions {
  display: flex;
  gap: 10px;
  width: fit-content;
  margin: 0 auto 15vh auto;

}

.btn {
  padding: 8px 16px;
  color: var(--couleur-button);
  border-radius: 50px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  transition: background-color 0.3s, transform 0.2s;
  background-color: transparent;
  border: 1px solid #000;
  color: #000;
  text-decoration: none;
}
.btn:hover {
  background-color: var(--couleur-button);
  color: var(--texte-button);
  transform: translateY(-2px);
}
