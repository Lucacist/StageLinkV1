{% extends 'layout/base.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="static/css/offres.css">
{% endblock %}

{% block content %}
<div class="container">
    <h1>{{ mode == 'edit' ? 'Modifier une offre de stage' : 'Créer une nouvelle offre de stage' }}</h1>
    
    <form action="index.php?route=traiter_offre" method="POST" class="form-offre">
        {% if mode == 'edit' %}
            <input type="hidden" name="action" value="update">
            <input type="hidden" name="id" value="{{ offre.id }}">
        {% else %}
            <input type="hidden" name="action" value="create">
        {% endif %}
        
        <div class="form-group">
            <label for="entreprise_id">Entreprise</label>
            <select id="entreprise_id" name="entreprise_id" required>
                <option value="">Sélectionnez une entreprise</option>
                {% for entreprise in entreprises %}
                    <option value="{{ entreprise.id }}" {{ mode == 'edit' and offre.entreprise_id == entreprise.id ? 'selected' : '' }}>{{ entreprise.nom }}</option>
                {% endfor %}
            </select>
        </div>
        
        <div class="form-group">
            <label for="titre">Titre</label>
            <input type="text" id="titre" name="titre" value="{{ mode == 'edit' ? offre.titre : '' }}" required>
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="6" required>{{ mode == 'edit' ? offre.description : '' }}</textarea>
        </div>
        
        <div class="form-group">
            <label>Compétences requises</label>
            <div class="checkbox-grid">
                {% if competences is empty %}
                    <p style="grid-column: 1 / -1; text-align: center;">
                        Aucune compétence disponible. Veuillez en ajouter d'abord.
                    </p>
                {% else %}
                    {% for competence in competences %}
                    <div class="checkbox-item">
                        <input type="checkbox" 
                               id="comp_{{ competence.id }}" 
                               name="competences[]" 
                               value="{{ competence.id }}"
                               {% if mode == 'edit' and offre.competences is defined %}
                                   {% for offreComp in offre.competences %}
                                       {% if offreComp.id == competence.id %}checked{% endif %}
                                   {% endfor %}
                               {% endif %}>
                        <label for="comp_{{ competence.id }}">{{ competence.nom }}</label>
                    </div>
                    {% endfor %}
                {% endif %}
            </div>
            <p class="info-text">Sélectionnez au moins une compétence requise pour l'offre.</p>
        </div>
        
        <div class="form-group">
            <label for="date_debut">Date de début</label>
            <input type="date" id="date_debut" name="date_debut" value="{{ mode == 'edit' ? offre.date_debut : '' }}" required>
        </div>
        
        <div class="form-group">
            <label for="date_fin">Date de fin</label>
            <input type="date" id="date_fin" name="date_fin" value="{{ mode == 'edit' ? offre.date_fin : '' }}" required>
        </div>
        
        <div class="form-group">
            <label for="base_remuneration">Rémunération (€ par mois)</label>
            <input type="number" id="base_remuneration" name="base_remuneration" step="0.01" min="0" value="{{ mode == 'edit' ? offre.base_remuneration : '' }}" required>
        </div>
        
        <div class="form-actions">
            <a href="index.php?route=offres" class="btn-cancel">Annuler</a>
            <button type="submit" class="btn-submit">{{ mode == 'edit' ? 'Mettre à jour' : 'Créer' }} l'offre</button>
        </div>
    </form>
</div>
{% endblock %}